    <Window x:Class="Pendu_Vincent_Malitine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pendu_Vincent_Malitine"
        mc:Ignorable="d"
        Title="Pendu — Vincent Malitine"
        Height="600" Width="1080"
        MinWidth="800" MinHeight="480"
        Background="#1E1E1E"
        Foreground="White">

    <Window.Resources>
        <!-- Bouton principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#313235"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3E3E40"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox en lecture seule (statuts) -->
        <Style x:Key="StatusTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Présentation du mot (grande zone) -->
        <Style x:Key="WordDisplay" TargetType="TextBox" BasedOn="{StaticResource StatusTextBox}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#2E2E2E"/>
        </Style>

    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Header -->
            <RowDefinition Height="*"/>       <!-- Main -->
            <RowDefinition Height="Auto"/>    <!-- Status bar -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>  <!-- Left: vie, commandes -->
            <ColumnDefinition Width="*"/>    <!-- Centre: mot + clavier -->
            <ColumnDefinition Width="300"/>  <!-- Right: statut, historique -->
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <TextBlock Text="Jeu du Pendu" FontSize="22" FontWeight="Bold" Foreground="White" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            <TextBlock Text="Utilisez le clavier ou cliquez sur les lettres. Entrée pour valider." Foreground="#BDBDBD" Margin="12,0,0,0" VerticalAlignment="Center" DockPanel.Dock="Left"/>
        </DockPanel>

        <!-- LEFT: Vie, image, commandes -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="6">
            <TextBlock Text="Vies" FontWeight="Bold" Foreground="#CCCCCC" Margin="4"/>
            <Image x:Name="LifeImage" Height="180" Width="180" Stretch="Uniform" Margin="6" HorizontalAlignment="Stretch"/>
            <ProgressBar x:Name="LifeProgressBar" Height="18" Margin="6" Maximum="100" Value="100"/>
            <TextBox x:Name="LifeTextBox" Style="{StaticResource StatusTextBox}" Margin="6,8,6,0" Text="Vies restantes : 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="6,12,6,0">
                <Button x:Name="RestartButton" Style="{StaticResource PrimaryButton}" Content="Recommencer" Width="140" Height="40" Click="RestartButton_Click" />
                <Button x:Name="EndButton" Style="{StaticResource PrimaryButton}" Content="Quitter" Width="80" Height="40" Click="EndButton_Click" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- CENTER: Mot + clavier -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Mot -->
                <RowDefinition Height="Auto"/>  <!-- Lettres utilisées -->
                <RowDefinition Height="*"/>     <!-- Clavier -->
            </Grid.RowDefinitions>

            <TextBox x:Name="FoundedTextBox" Style="{StaticResource WordDisplay}" Grid.Row="0" Margin="4" Text="### ###" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <TextBox x:Name="UsedTextBox" Style="{StaticResource StatusTextBox}" Grid.Row="1" Margin="4" Text="Lettres utilisées : " HorizontalAlignment="Stretch"/>

            <!-- Clavier : utilisation d'un WrapPanel pour adaptabilité -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="4" Focusable="False">
                <WrapPanel x:Name="LettersPanel" Orientation="Horizontal" ItemHeight="48" ItemWidth="56">
                    <!-- Lettres A..Z -->
                    <Button Content="A" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer A"/>
                    <Button Content="B" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer B"/>
                    <Button Content="C" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer C"/>
                    <Button Content="D" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer D"/>
                    <Button Content="E" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer E"/>
                    <Button Content="F" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer F"/>
                    <Button Content="G" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer G"/>
                    <Button Content="H" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer H"/>
                    <Button Content="I" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer I"/>
                    <Button Content="J" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer J"/>
                    <Button Content="K" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer K"/>
                    <Button Content="L" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer L"/>
                    <Button Content="M" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer M"/>
                    <Button Content="N" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer N"/>
                    <Button Content="O" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer O"/>
                    <Button Content="P" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer P"/>
                    <Button Content="Q" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer Q"/>
                    <Button Content="R" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer R"/>
                    <Button Content="S" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer S"/>
                    <Button Content="T" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer T"/>
                    <Button Content="U" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer U"/>
                    <Button Content="V" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer V"/>
                    <Button Content="W" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer W"/>
                    <Button Content="X" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer X"/>
                    <Button Content="Y" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer Y"/>
                    <Button Content="Z" Style="{StaticResource PrimaryButton}" Click="Button_Letter_Click" ToolTip="Proposer Z"/>

                    <!-- Bouton de validation bien visible -->
                    <Button Content="✅" Style="{StaticResource PrimaryButton}" Click="Button_Done_Click"/>
                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <!-- RIGHT: Statut détaillé -->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="8" VerticalAlignment="Top">
            <TextBlock Text="Statut" FontWeight="Bold" Foreground="#CCCCCC" Margin="4"/>
            <TextBox x:Name="ResultTextBox" Style="{StaticResource StatusTextBox}" Height="80" Text="Proposition : " TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
            <TextBlock Text="Conseils" FontWeight="Bold" Foreground="#CCCCCC" Margin="6,12,6,4"/>
            <TextBlock Text="• Appuyez sur une lettre ou tapez au clavier." Foreground="#BDBDBD" Margin="6,0"/>
            <TextBlock Text="• Appuyez sur Entrée pour valider votre proposition." Foreground="#BDBDBD" Margin="6,2"/>
            <TextBlock Text="• Backspace pour effacer la proposition en cours." Foreground="#BDBDBD" Margin="6,2"/>
        </StackPanel>

        <!-- Status bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#151515" Padding="6" CornerRadius="6" Margin="0,10,0,0">
            <DockPanel>
                <TextBlock Text="Prêt" Foreground="#9E9E9E" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Fichier de mots : WordsMAJONLY.txt" Foreground="#9E9E9E" DockPanel.Dock="Right" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

