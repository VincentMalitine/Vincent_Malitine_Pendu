<Window x:Class="Pendu_Vincent_Malitine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pendu_Vincent_Malitine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="local:MainWindow">
            <Setter Property="Background" Value="Black"/>
        </Style>
        <Style x:Key="VsStyle4Button" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#131313"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VsStyle4TextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#151515"/>
            <Setter Property="BorderThickness" Value="0.75"/>
        </Style>
    </Window.Resources>


    <!-- Définition de la Grid -->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="UsedTextBox" Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" IsReadOnly="True" Style="{StaticResource VsStyle4TextBox}"/>
        <TextBox x:Name="FoundedTextBox" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" IsReadOnly="True" Style="{StaticResource VsStyle4TextBox}" Margin="2,81,2,0"/>
        <TextBox x:Name="ResultTextBox" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" Style="{StaticResource VsStyle4TextBox}"/>
        <TextBox x:Name="LifeTextBox" Grid.Column="2" Grid.Row="0" HorizontalContentAlignment="Center" IsReadOnly="True" Width="260" Style="{StaticResource VsStyle4TextBox}" Margin="4,92,3,25"/>
        <ProgressBar x:Name="LifeProgressBar" Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" Height="20" Width="267"/>
        <Image x:Name="LifeImage" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="230" Height="230"/>

        <Button x:Name="EndButton" Style="{StaticResource VsStyle4Button}" Content="Mettre Fin" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" Margin="0,144,0,0" Width="100" Height="20" Click="EndButton_Click"/>
        <Button x:Name="RestartButton" Style="{StaticResource VsStyle4Button}" Content="Recommencer" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" Margin="0,119,0,0" Width="150" Height="20" Click="RestartButton_Click"/>

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="A" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="B" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="C" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="0" Grid.Column="3" Content="D" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="0" Grid.Column="4" Content="E" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="1" Grid.Column="0" Content="F" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="G" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="H" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="1" Grid.Column="3" Content="I" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="1" Grid.Column="4" Content="J" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="2" Grid.Column="0" Content="K" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="L" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="M" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Content="N" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="2" Grid.Column="4" Content="O" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="3" Grid.Column="0" Content="P" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="Q" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="R" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="3" Grid.Column="3" Content="S" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="3" Grid.Column="4" Content="T" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="4" Grid.Column="0" Content="U" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="4" Grid.Column="1" Content="V" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="4" Grid.Column="2" Content="W" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="4" Grid.Column="3" Content="X" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="4" Grid.Column="4" Content="Y" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="5" Grid.Column="0" Content="Z" Style="{StaticResource VsStyle4Button}" Click="Button_Letter_Click"/>
            <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" Content="✔️ Valider ✔️" Style="{StaticResource VsStyle4Button}" Click="Button_Done_Click"/>

        </Grid>

    </Grid>

</Window>   

